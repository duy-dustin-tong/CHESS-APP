# Example backend .env for repository (do NOT commit secrets)
# Copy this to `.env` locally and fill in real values before running.

# Environment: 'dev' or 'prod'
ENV=dev

# Debug (True/False)
DEBUG=True

# Server settings
PORT=5000
HOST=127.0.0.1

# Secrets - replace with strong values in production
SECRET_KEY=REPLACE_ME_WITH_SECRET_KEY
JWT_SECRET_KEY=REPLACE_ME_WITH_JWT_SECRET_KEY

# Optional database URL. Example Postgres: postgres://user:pass@host:5432/dbname
# If empty, default sqlite file will be used by the app.
DATABASE_URL=
